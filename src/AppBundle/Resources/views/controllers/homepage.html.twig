				<li><a href="{{ asset('bundles/app/images/gallery/galleryLarge10.jpg') }}"><img src="{{ asset('bundles/app/images/gallery/gallerySmall11.jpg') }}" alt="Image 1" /></a></li>
				<li><a href="{{ asset('bundles/app/images/gallery/galleryLarge10.jpg') }}"><img src="{{ asset('bundles/app/images/gallery/gallerySmall12.jpg') }}" alt="Image 1" /></a></li>
			</ul>
			<a href="#" class="btnType1"><span>view more</span></a>
		</section>

		<section class="listModuleType2">
			<h3 class="titleType1">Featured articles</h3>
			<ul>
				{% for i in 1..5 %}
				<li>
					<a href="#" class="articleType3">
						<div class="imageCont">
							<img src="{{ asset('bundles/app/images/gallery/gallerySmall3.jpg') }}" alt="">
